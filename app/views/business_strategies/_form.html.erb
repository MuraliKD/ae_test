<%= simple_form_for(@business_strategy) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :vision %>
    <%= f.input :principles %>
    <%= f.input :business_model %>
    <%= f.input :form_factor %>
    <%= f.input :pricing %>
    <%= f.input :sales %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
