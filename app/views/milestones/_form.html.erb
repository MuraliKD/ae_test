<%= simple_form_for(@milestone) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :summary %>
    <%= f.input :description %>
    <%= f.input :title %>
    <%= f.association :gtm_strategy %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
